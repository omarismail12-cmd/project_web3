{
  "version": 2,
  "builds": [
    { "src": "api/**/*.php", "use": "@vercel-community/php" },
    { "src": "pages/**/*.html", "use": "@vercel/static" },
    { "src": "assets/**/*", "use": "@vercel/static" },
    { "src": "*.{html,php}", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/", "dest": "/pages/home.html" },
    { "src": "/(.*)", "dest": "/api/$1" }
  ]
}
